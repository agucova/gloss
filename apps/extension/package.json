{
	"name": "@gloss/extension",
	"version": "0.1.0",
	"private": true,
	"description": "Gloss browser extension for highlighting and sharing",
	"type": "module",
	"scripts": {
		"dev": "wxt --port 5555",
		"dev:firefox": "wxt -b firefox",
		"build": "wxt build",
		"build:firefox": "wxt build -b firefox",
		"zip": "wxt zip",
		"zip:firefox": "wxt zip -b firefox",
		"compile": "tsc --noEmit",
		"postinstall": "wxt prepare"
	},
	"dependencies": {
		"@floating-ui/dom": "^1.7.4",
		"@gloss/anchoring": "workspace:*",
		"@gloss/dashboard": "workspace:*",
		"clsx": "^2.1.1",
		"convex": "^1.32.0",
		"lucide-react": "^0.473.0",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"solid-js": "^1.9.11",
		"tailwind-merge": "^3.3.1"
	},
	"devDependencies": {
		"@tailwindcss/vite": "^4.0.15",
		"@types/chrome": "^0.0.304",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^4.5.2",
		"tailwindcss": "^4.0.15",
		"typescript": "^5.9.3",
		"vite-plugin-solid": "^2.11.10",
		"wxt": "^0.20.6"
	}
}
