# Database (local or Runway Postgres)
# Local default: postgres://postgres:postgres@localhost:5432/gloss
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gloss

# Authentication
BETTER_AUTH_SECRET=your-secret-key-minimum-32-characters-long
BETTER_AUTH_URL=http://localhost:3000

# CORS (URL of your web app)
CORS_ORIGIN=http://localhost:3001

# Server (Runway injects PORT automatically)
NODE_ENV=development
PORT=3000
